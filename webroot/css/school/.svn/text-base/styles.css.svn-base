* { padding: 0; margin: 0; }

body {
 font-family: Arial, Helvetica, sans-serif;
 font-size: 13px;
}
img{border:0;}
#wrapper { 
 margin: 0 auto;
 width: 922px;
}
#faux {
 background: url(/img/styles/school/faux-4-2-col.gif);
 margin-bottom: 0px;
 overflow: auto; /* Paul O Brien Fix for IE www.pmob.co.uk */
 width: 100%
}
#header {
 color: #333;
 width: 902px;
 padding: 10px;
 height: 100px;
 margin: 10px 0px 0px 0px;
 background: #D1DBDB;
}
.blogname{ margin:0 0 12px 20px;width:800px;height:20px;}

.blogname a:link, .blogname a:visited { 
      color: #fff;
      text-decoration:none;                                                                                                                                 
      font-weight:bold;
      font-size:18pt;
      margin:0;
}

.blogname a:hover { color: #fff;}

.quote{ color:#fff;margin:16px 0 0 40px;font-weight:bold;font-size:12pt;width:800px;height:20px;} 

#navigation {
 color: #333;
 padding: 0;
 margin: 0;
 background: #ABBEBE;
 height:24px;
}
ul#menu_nav { 
              padding: 0;
              margin: 0;
              background-color: #c0c0c0;
              color: #fff;
              float: left;
              width: auto;
}
             
ul#menu_nav li a { 
  padding: 4px;
  background-color: #c0c0c0;
  color: #fff;
  text-decoration: none;
  float: left;
  border-bottom: solid 1px #fff;
  border-top: solid 1px #fff;
  border-right: solid 1px #fff;
 }                   
ul#menu_nav li a:hover { 
                         color: #000;
                         background-color: #fff;
 }
ul#menu_nav li {  display: inline; }


#rightcolumn { 
 display: inline;
 color: #333;
 margin: 10px;
 padding: 0px;
 width: 195px;
 float: right;
}
#leftcolumn { 
 float: left;
 color: #333;
 margin: 10px;
 padding: 0px;
 width: 683px;
 display: inline;
 position: relative;
}
#footer { 
 width: 902px;
 clear: both;
 color: #333;
 background: #ABBEBE;
 margin: 0px 0px 10px 0px;
 padding: 10px;
}
.clear { clear: both; background: none; }

.titentry {  
     margin: 22px 6px 6px 0;
     padding:2px;
     border-bottom: 2px solid gray;
     text-align: left;
}

.titentry a:link, .titentry a:visited { 
     font-size: 15pt;
     color: #426674;
     font-weight: bolder;
     text-decoration:none;
} 

.titentry a:hover{ 
     font-size: 15pt;
     color: orange;
     font-weight: bolder;
} 

            
.body_entry{ 
    color:#000;
 }
.plink { 
     margin:5px 0 5px 0;
 }

.temas { 
     margin-top:15px;
     text-align:center;
     color:#426674;
     font-size:14pt;
     border-bottom:1px solid black;
 }

/* Message by flash CakePHP stuff */
.message
{ 
      position:absolute;
      top:20px;
      left:800px;
      width:200px;
      font-size:7pt;
      font-weight:bold;
      color:white;
      border: solid 1px orange;
      padding:2px;
      background-color:#66cc00;
      text-align:center;
 }
